.loader
  border-style solid
  border-width .5rem
  border-color rgba(255, 255, 255, 0.2)
  border-left-color #ffffff
  width 5rem
  height 5rem
  border-radius 50%
  animation spin 1.3s infinite linear
  &.disabled, &.hidden
    display none
  &.inline
    display inline-block
  &.small
    width 3.3rem
    height 3.3rem
    border-width .35rem
  &.large
    width 5rem
    height 5rem
  &.dark
    border-color rgba(0, 0, 0, 0.2)
    border-left-color text-grey

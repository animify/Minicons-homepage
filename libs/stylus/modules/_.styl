.contain
    padding 3rem 0

header
    padding 5rem 0
    h4
        color text-disabled
    .button-group
        margin-top 2rem
        .button + .button
            margin-left 1.3rem
#icons
    .col
        padding 1.3rem 0
        .wrap
            padding .8rem 0 0 0
            margin 0 1.3rem
            border-top 1px solid border-grey
        .icon
            display block
            text-align center
            padding 3rem 0 1rem 0
            svg
                display inline-block
                height 30px
                width 50px
        p
            display block
            font-weight 600
            color color-primary
            font-size 1.1rem
        small
            display block
            color text-disabled
            margin-top .3rem
            content ' '
            strong
                color text-default

footer
    padding 3rem 0
    margin-top 4rem !important
    display block
    border-top 1px solid border-grey
    small
        padding 2rem 0
        display block
